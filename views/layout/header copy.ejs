<header>
    <nav class="navbar navbar-expand-lg">
        <div class="head-left-wheat anm" data-speed-x="5" data-speed-y="2" data-speed-scale="20"><img
                src="images/assets/wheat-8.png" alt="" /></div>
        <div class="head-right-wheat anm" data-speed-x="-2" data-speed-y="2" data-speed-scale="10"><img
                src="images/assets/wheat-7.png" alt="" /></div>
        <div class="container">
            <!-- <div class="head-top-part"> -->
            <a class="navbar-brand" href="/"><img src="<%= logo.image !== '' ? logo.image : 'images/assets/wheat-7.png' %>" alt="" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="fa fa-navicon"></span>
            </button>
            <!-- </div> -->

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link " href="/about">About</a></li>
                    <li class="nav-item"><a class="nav-link " href="/flavours">Flavours</a></li>
                    <li class="nav-item"><a class="nav-link " href="/contact">Contact</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">
                            <div class="mini-cart-icon">
                                    <%if(user.length !== 0){ %>
                                        <img alt="user" src="images/user.svg"><span><%= user.name %></span>
                                    <%} else{ %>
                                        <img alt="user" src="images/user.svg"><span></span>
                                    <% }%>
                                    
                               
                                
                            </div>
                            
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/wishlist">
                            <div class="mini-cart-icon">
                                <img alt="wishlist" src="images/icon-heart.svg">
                                <span class="pro-count blue wishlist_count"><%=wishlist.length%></span>
                            </div>
                        </a>
                    </li>
                    <li class="nav-item cart">
                        <a class="nav-link" href="/cart">
                            <div class="mini-cart-icon">
                                <!-- <img alt="cart" src="https://jovialsub.com/web/imgs/theme/icons/icon-cart.svg"> -->
                                CART
                                <span class="pro-count blue total_item_cart" id="total_item_cart"><%= cart.length %></span>
                            </div>
                        </a>
                        <div class="cart-dropdown-wrap">
                            <!-- <ul class="cart-list" id="cart-list" style="justify-content: center;"> -->
                                <% let total = 0; %>
                                <table class="table" style="font-size: 14px;">
                                
                                    
                                        <tbody id="row">

                                    
                                    <% 
                                    
                                    cart.forEach((row, index) =>{
                                        sub_total = 0;
                                        sub_total = (row.product_price * 1) * row.quantity
                                        %>
                                        <tr>
                                            <td class="fw-bold"><%= row.product_name %></td>
                                            <td>₹ <%= row.product_price %></td>
                                            <td><%= row.quantity %></td>
                                            <td>₹ <%= sub_total %></td>
                                        </tr>
                                        <!-- <li style="justify-content: center;"><%= row.product_name %> x <%= row.product_price %> x <%= row.quantity %> = <%= sub_total %></li> -->
                                        <%
                                        total = total + sub_total;
                                    })
                                    %>
                                </tbody>
                                </table>
                             
                            <!-- </ul> -->

                            <div class="shopping-cart-footer">
                                <div class="shopping-cart-total" data-total="0">
                                    <h4>Total 
                                        <span id="total_amount">
                                            
                                            <% if(cart.length === 0) { %>
                                                ₹ 0.00
                                            <% } else { %>
                                                ₹ <%= total %>
                                                <% }%>
                                        </span>
                                    </h4>
                                </div>
                                <div class="shopping-cart-button">
                                    <a href="/cart" class="outline">View cart</a>
                                    <a href="/checkout">Checkout</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <%if(user.length !== 0){ %>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                    <% } %>
                </ul>
            </div>

            <ul class="navbar-nav mobile">
                <li class="nav-item">
                    <a class="nav-link" href="login.html">
                        <div class="mini-cart-icon">
                            <img alt="user" src="images/user.svg">
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="wishlist.html">
                        <div class="mini-cart-icon">
                            <img alt="wishlist" src="images/icon-heart.svg">
                            <span class="pro-count blue">4</span>
                        </div>
                    </a>
                </li>
                <li class="nav-item cart">
                    <a class="nav-link" href="cart.html">
                        <div class="mini-cart-icon">
                            <img alt="cart" src="https://jovialsub.com/web/imgs/theme/icons/icon-cart.svg">
                            <span class="pro-count blue total_item_cart" id="total_item_cart">0</span>
                        </div>
                    </a>
                    <div class="cart-dropdown-wrap">
                        <ul class="cart-list" id="cart-list">

                        </ul>

                        <div class="shopping-cart-footer">
                            <div class="shopping-cart-total" data-total="0">
                                <h4>Total <span>₹0</span></h4>
                            </div>
                            <div class="shopping-cart-button">
                                <a href="#" class="outline">View cart</a>
                                <a href="#">Checkout</a>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
    </nav>
</header>