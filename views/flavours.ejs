<script>
    $('.add_cart').click(function(e){
        var id = $(this).attr('pro_id');
        var arr = {id:id};
        $.ajax({
            url: "/add_cart",
            method: "post",
            data: {'id' : id},
            success: function(msg) {
                // alert(msg.row)
                $('#total_item_cart').text(msg.total_items)
                $('#row').html(msg.row)
                $('#total_amount').text("â‚¹ "+msg.total)
                Swal.fire({
                    title: "Good job!",
                    text: "Product Added to cart!",
                    icon: "success",
                    confirmButtonColor: "#500800",
                });
               
            }
        });
        
    })

    $('.add_wishlist').click(function(e){
        var id = $(this).attr('pro_id');
        var arr = {id:id};
        $.ajax({
            url: "/add_wishlist",
            method: "post",
            data: {'id' : id},
            success: function(msg) {
                // alert(msg)
                $('.wishlist_count').text(msg.total_items)
                
                
                Swal.fire({
                    title: "Good job!",
                    text: "Product Added to Wishlist!",
                    icon: "success",
                    confirmButtonColor: "#500800",
                });
                
            }
        });
        
    })
    
</script>